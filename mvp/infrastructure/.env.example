# Inspector MVP - Environment Configuration
# Copy this to .env and update with your values

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_PASSWORD=change_me_secure_password

# ============================================================================
# INFLUXDB
# ============================================================================
INFLUXDB_PASSWORD=change_me_influx_password
INFLUXDB_TOKEN=change_me_influx_token_minimum_32_chars

# ============================================================================
# GRAFANA
# ============================================================================
GRAFANA_PASSWORD=change_me_grafana_password

# ============================================================================
# PACKAGER MONITOR
# ============================================================================
PACKAGER_URL=http://packager-01.internal
POLL_INTERVAL=30

# ============================================================================
# CDN MONITOR
# ============================================================================
CDN_ENDPOINTS=http://cdn-edge-hn.internal,http://cdn-edge-hcm.internal
CDN_POLL_INTERVAL=60

# ============================================================================
# CHANNELS
# ============================================================================
# Comma-separated list of channels to monitor
CHANNELS=CH_TV_HD_001,CH_TV_HD_002,CH_TV_HD_003

# ============================================================================
# MPEG-TS MONITOR
# ============================================================================
MPEGTS_POLL_INTERVAL=5
# MPEG-TS channels format: channel_id,input_url,probe_id;...
# Example: CH_001,udp://239.1.1.1:5000,1;CH_002,udp://239.1.1.2:5000,1
MPEGTS_CHANNELS=
